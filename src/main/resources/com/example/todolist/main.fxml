<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" stylesheets="@css/styles.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.todolist.HelloController">


    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
   
   
       <Label styleClass="title" text="ToDo List" />
   
   
       <GridPane alignment="CENTER" hgap="15" vgap="15">
      <children>
      
      
              <Label fx:id="lblName" text="Name" GridPane.columnIndex="0" GridPane.rowIndex="0" />
              <TextField fx:id="txtName" prefWidth="305.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
      
      
              <Label fx:id="lblDescription" text="Description" GridPane.columnIndex="0" GridPane.rowIndex="1" />
              <TextField fx:id="txtDescription" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      
      
              <Label fx:id="lblDueDate" text="Due Date" GridPane.columnIndex="0" GridPane.rowIndex="2" />
              <DatePicker fx:id="dpDueDate" promptText="Due date" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      
      
              <Button fx:id="btnAdd" minWidth="80" onAction="#onAddButtonClick" text="Add" GridPane.columnIndex="2" GridPane.rowIndex="0" />
              <Button fx:id="btnReset" minWidth="80" onAction="#onResetButtonClick" text="Reset" GridPane.columnIndex="2" GridPane.rowIndex="1" />
      
               <Label text="Tags" GridPane.columnIndex="0" GridPane.rowIndex="3" />
               <Label maxWidth="130" text="Tags " GridPane.columnIndex="1" GridPane.rowIndex="3" />
              <ChoiceBox fx:id="cbTags" prefHeight="44.0" prefWidth="185.0" GridPane.columnIndex="2" GridPane.rowIndex="3" />
      
              <TextField fx:id="txtTag" prefWidth="305.0" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      
              <Button fx:id="btnAddTag" minWidth="80" onAction="#onAddTagClick" text="Add tag" GridPane.columnIndex="3" GridPane.rowIndex="3" />
              <Button fx:id="btnSendTag" minWidth="80" onAction="#onSendTag" text="Send" visible="false" GridPane.columnIndex="2" GridPane.rowIndex="3" />
      
      
              <TableView fx:id="tblTasks" GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="4">
                  <columns>
                     <TableColumn fx:id="id" prefWidth="75.0" text="id" />
                     <TableColumn fx:id="nameColumn" prefWidth="75.0" text="name" />
                     <TableColumn fx:id="descriptionColumn" prefWidth="75.0" text="description" />
                     <TableColumn fx:id="estatusColumn" prefWidth="75.0" text="estatus" />
                     <TableColumn fx:id="dateColumn" prefWidth="75.0" text="dueDate" />
                     <TableColumn fx:id="idTagsColumn" prefWidth="75.0" text="idTags" />
                  </columns>
              </TableView>
      </children>
   
   
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints maxWidth="300.0" minWidth="254.0" prefWidth="254.0" />
            <ColumnConstraints maxWidth="181.0" minWidth="135.0" prefWidth="181.0" />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
       </GridPane>
   </children>

</VBox>
